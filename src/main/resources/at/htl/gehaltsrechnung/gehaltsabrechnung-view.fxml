<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.htl.gehaltsrechnung.GehaltsabrechnungController">
    <Label style="-fx-font-size:20; -fx-font-weight:bold;" text="Gehalts- und Lohnabrechnung" />


    <HBox alignment="CENTER" spacing="10">
        <Label text="Typ:" />
        <ChoiceBox fx:id="choiceBox" prefWidth="150" />
    </HBox>
   <Label fx:id="errorMessageField"/>


    <TextField fx:id="namensfeld" promptText="Name" />
    <TextField fx:id="periodenfeld" promptText="Abrechnungsperiode (z. B. 5-8)" />
    <TextField fx:id="gehaltfeld" promptText="Monatsgehalt" />
    <TextField fx:id="stundenlohnfeld" promptText="Stundenlohn" />
    <TextField fx:id="arbeitsstundenfeld" promptText="Arbeitsstunden/Monat" />


    <Button fx:id="addButton" onAction="#onAddButtonClick" text="HinzufÃ¼gen" />


    <TableView fx:id="table" prefHeight="300" prefWidth="600">
        <columns>
            <TableColumn fx:id="colId" prefWidth="40" text="ID" />
            <TableColumn fx:id="colName" prefWidth="150" text="Name" />
            <TableColumn fx:id="colType" prefWidth="80" text="Typ" />
            <TableColumn fx:id="colPeriod" prefWidth="80" text="Periode" />
            <TableColumn fx:id="colVerdienst" prefWidth="120" text="Verdienst" />
        </columns>
    </TableView>


</VBox>
